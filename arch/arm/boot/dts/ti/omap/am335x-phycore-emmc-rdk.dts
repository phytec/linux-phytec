/dts-v1/;

#include "am335x-phycore-som.dtsi"
#include "am335x-pcm-953.dtsi"

/* SoM */
&mmc2 {
	status = "okay";
};

&i2c_eeprom {
	status = "okay";
};

&i2c_rtc {
	status = "okay";
};

&serial_flash {
	status = "okay";

};
/* Override the user_leds node to match the PCM-062 SoM setup */
&user_leds {
	user-led0 {
		gpios = <&gpio2 4 GPIO_ACTIVE_HIGH>;
	};

	user-led1 {
		gpios = <&gpio2 5 GPIO_ACTIVE_LOW>;
	};
};

&user_leds_pins {
	pinctrl-single,pins = <
		AM33XX_PADCONF(AM335X_PIN_GPMC_WEN, PIN_OUTPUT_PULLDOWN, MUX_MODE7)    /* gpmc_wen.gpio2_4 */
		AM33XX_PADCONF(AM335X_PIN_GPMC_BEN0_CLE, PIN_OUTPUT_PULLDOWN, MUX_MODE7)    /* gpmc_ben0_cle.gpio2_5 */
	>;
};
